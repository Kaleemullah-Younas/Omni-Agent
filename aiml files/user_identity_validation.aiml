<aiml version="2.0">

<!-- User Identity Validation and Name Conflict Detection -->

<!-- Pattern: I AM [NAME] -->
<category>
    <pattern>I AM *</pattern>
    <template>
        <think>
            <set name="claimed_name"><star/></set>
            <set name="actual_name"><get name="username"/></set>
        </think>
        <condition name="claimed_name">
            <li value="<get name='username'/>">
                Yes, I know you are <get name="username"/>. That's correct!
            </li>
            <li>
                I already know your name is <get name="username"/>. You are saying a lie. Your name is not <star/>.
            </li>
        </condition>
    </template>
</category>

<!-- Pattern: MY NAME IS [NAME] -->
<category>
    <pattern>MY NAME IS *</pattern>
    <template>
        <think>
            <set name="claimed_name"><star/></set>
            <set name="actual_name"><get name="username"/></set>
