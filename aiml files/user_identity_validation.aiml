        <condition name="claimed_name">
            <li value="<get name='username'/>">
                Yes, I know your name is <get name="username"/>. That's correct!
            </li>
            <li>
                I already know your name is <get name="username"/>. You are saying a lie. Your name is not <star/>.
            </li>
        </condition>
    </template>
</category>

<!-- Pattern: CALL ME [NAME] -->
<category>
    <pattern>CALL ME *</pattern>
    <template>
        <think>
            <set name="claimed_name"><star/></set>
            <set name="actual_name"><get name="username"/></set>
        </think>
        <condition name="claimed_name">
            <li value="<get name='username'/>">
                Of course, I'll call you <get name="username"/> as always!
            </li>
            <li>
                I know your real name is <get name="username"/>. I cannot call you <star/> because that's not your name.
            </li>
        </condition>
    </template>
</category>

<!-- Pattern: I'M [NAME] -->
<category>
    <pattern>I M *</pattern>
    <template>
        <srai>I AM <star/></srai>
    </template>
</category>

